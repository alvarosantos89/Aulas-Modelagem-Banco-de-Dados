/*RELATORIO QUE APRESENTE TODOS OS CLIENTES*/

SELECT IDCLIENTE, NOME
FROM CLIENTE;


/*TODOS OS CLIENTES E SEUS RESPECTIVOS ENDEREÇOS E TELEFONES*/

SELECT C.NOME, E.RUA, E.BAIRRO, E.CIDADE, E.ESTADO, T.NUMERO
FROM CLIENTE C
INNER JOIN ENDERECO E
ON C.IDCLIENTE = E.ID_CLIENTE
INNER JOIN TELEFONE T
ON C.IDCLIENTE = T.ID_CLIENTE;


/*RELAÇÃO DE TODOS OS CLIENTES DO SEXO MASCULINO*/
/*-ATENÇÃO APRESENTE A SOLUÇÃO UTILIZADA PARA A CORREÇÃO DE CADASTROS*/

SELECT IDCLIENTE, NOME, SEXO
FROM CLIENTE
WHERE SEXO = 'M';

UPDATE CLIENTE
SET SEXO = 'F'
WHERE IDCLIENTE = /*Colocar aqui o IDCLIENTE a ser modificado*/


/*RELATÓRIO QUE CONTEMPLE TODAS AS MULHERES*/
/*-ATENÇÃO APRESENTE A SOLUÇÃO UTILIZADA PARA A CORREÇÃO DE CADASTROS*/

SELECT IDCLIENTE, NOME, SEXO
FROM CLIENTE
WHERE SEXO = 'F';

UPDATE CLIENTE
SET SEXO = 'M'
WHERE IDCLIENTE = /*Colocar aqui o IDCLIENTE a ser modificado*/


/*APRESENTE A QUANTIDADE DE CLIENTES AGRUPADO POR SEXO*/

SELECT SEXO, COUNT(*)
FROM CLIENTE
GROUP BY SEXO;


/*PROJETE APENAS O ID E EMAIL DOS CLIENTES QUE MOREM NO CENTRO DO RIO DE JANEIRO E QUE NÃO TENHAM CELULAR*/

SELECT C.IDCLIENTE, C.EMAIL, T.NUMERO, T.TIPO
FROM CLIENTE C
INNER JOIN ENDERECO E
ON C.IDCLIENTE = E.ID_CLIENTE
INNER JOIN TELEFONE T
ON C.IDCLIENTE = T.ID_CLIENTE
WHERE E.BAIRRO = 'CENTRO' AND E.ESTADO = 'RJ'
AND TIPO <> 'CEL';


/*PROJETE A RELAÇÃO DOS CLIENTES E SEUS RESPECTIVOS TELEFONE CELULAR E EMAIL, DE TODOS OS CLIENTES DO ESTADO DO PARANÁ*/

SELECT C.IDCLIENTE, C.NOME, T.NUMERO
FROM CLIENTE C
INNER JOIN ENDERECO E
ON C.IDCLIENTE = E.ID_CLIENTE
INNER JOIN TELEFONE T
ON C.IDCLIENTE = T.ID_CLIENTE
WHERE E.ESTADO = 'PR';
